    "# Создайте диагональную матрицу с элементами от N до 0. Посчитайте сумму ее значений на диагонали..\n",
    "n = int(input('введите N:\\n'))\n",
    "n_matrix = np.diag(np.arange(n, 0, -1))\n",
    "print(n_matrix)\n",
    "\n",
    "def sum_diagonal(n_matrix):\n",
    "    l = len(n_matrix)\n",
    "    s = sum(n_matrix[i][i] for i in range(l))\n",
    "    return s\n",
    "print('Сумма по диогонали = ', sum_diagonal(n_matrix))"
